<resources
    xmlns="https://api-platform.com/schema/metadata/resources-3.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://api-platform.com/schema/metadata/resources-3.0 https://api-platform.com/schema/metadata/resources-3.0.xsd"
>
    <resource class="Sylius\Component\Core\Model\AvatarImage" shortName="AvatarImage">
        <validationContext>
            <values>
                <value name="groups">
                    <values>
                        <value>sylius</value>
                    </values>
                </value>
            </values>
        </validationContext>

        <operations>
            <operation class="ApiPlatform\Metadata\Get" uriTemplate="/admin/avatar-images/{id}.{_format}">
                <normalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>admin:avatar_image:read</value>
                            </values>
                        </value>
                    </values>
                </normalizationContext>
            </operation>

            <operation
                class="ApiPlatform\Metadata\Post"
                uriTemplate="/admin/avatar-images.{_format}"
                controller="Sylius\Bundle\ApiBundle\Controller\UploadAvatarImageAction"
                deserialize="false"
            >
                <normalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>admin:avatar_image:read</value>
                            </values>
                        </value>
                    </values>
                </normalizationContext>
                <openapi>
                    <requestBody description="" required="false">
                        <content>
                            <values>
                                <value name="multipart/form-data">
                                    <values>
                                        <value name="schema">
                                            <values>
                                                <value name="type">object</value>
                                                <value name="properties">
                                                    <values>
                                                        <value name="file">
                                                            <values>
                                                                <value name="type">string</value>
                                                                <value name="format">binary</value>
                                                            </values>
                                                        </value>
                                                        <value name="owner">
                                                            <values>
                                                                <value name="type">string</value>
                                                                <value name="format">iri-reference</value>
                                                            </values>
                                                        </value>
                                                    </values>
                                                </value>
                                            </values>
                                        </value>
                                    </values>
                                </value>
                            </values>
                        </content>
                    </requestBody>
                </openapi>
            </operation>

            <operation
                class="ApiPlatform\Metadata\Delete"
                uriTemplate="/admin/avatar-images/{id}"
            />
        </operations>
    </resource>
</resources>
