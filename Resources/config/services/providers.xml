<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="Sylius\Bundle\ApiBundle\Provider\CustomerProviderInterface" class="Sylius\Bundle\ApiBundle\Provider\CustomerProvider">
            <argument type="service" id="sylius.canonicalizer" />
            <argument type="service" id="sylius.factory.customer" />
            <argument type="service" id="sylius.repository.customer" />
        </service>

        <service id="Sylius\Bundle\ApiBundle\Provider\RequestApiPathPrefixProviderInterface" class="Sylius\Bundle\ApiBundle\Provider\RequestApiPathPrefixProvider">
            <argument type="service" id="request_stack" />
            <argument type="service" id="Sylius\Bundle\ApiBundle\Provider\ApiPathPrefixProviderInterface" />
        </service>

        <service id="Sylius\Bundle\ApiBundle\Provider\ApiPathPrefixProviderInterface" class="Sylius\Bundle\ApiBundle\Provider\ApiPathPrefixProvider">
            <argument>%sylius.security.new_api_route%</argument>
        </service>
    </services>
</container>
